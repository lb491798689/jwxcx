<!--pages/location/index.wxml-->
<view class="container">
  <map id="juwaiMap" 
    style="width: 100%; height:{{mapheight}}vh;"
    latitude="{{latitude}}"
    longitude="{{longitude}}"
    scale="{{scale}}"
    controls="{{controls}}"
    bindcontroltap="bindcontroltap"
    bindtap="showInfo"
    markers="{{markers}}"
    bindmarkertap="bindmarkertap"
    bindregionchange="bindregionchange"
    show-location/>
</view>
<view id="swiper_area" wx-if="{{ifShowInfo}}">
  <swiper current="{{current}}" style="height:{{map_width}}px"
  bindchange="currentChange">
    <block wx:for="{{markers}}">
      <swiper-item bindtap="gotoDetail" data-item="{{item.data}}">
      <view style="padding: 0px 10px;" data-item="{{item.data}}">
        <text data-item="{{item.data}}" class="itemtext_title">{{item.title}} </text>
        <view style="text-align:right">
          <image data-item="{{item.data}}" class="img" mode="aspectFill" src="{{item.data.head_url}}"></image>
        </view>
        <text data-item="{{item.data}}" class="address">{{item.data.address}} </text>
        <view data-item="{{item.data}}" class="support_info">
          <image data-item="{{item.data}}" src="/imgs/ic_like.png"></image>
          <text data-item="{{item.data}}">{{item.data.support ? item.data.support : 0}}</text>
          <image data-item="{{item.data}}" src="/imgs/ic_unlike.png"></image>
          <text data-item="{{item.data}}">{{item.data.objection ? item.data.objection : 0}}</text>
        </view>
      </view>
      </swiper-item>
    </block>
  </swiper>
</view>
