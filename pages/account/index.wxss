.c-header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height:100rpx;
    border-bottom:4rpx solid #e60000;
    background-color: #fff;
}
.c-header .c-header__container {
    display: -ms-flexbox;
    display: flex;
    width: 100%;
    height: 100rpx;
    padding-right: 20rpx;
    padding-left: 20rpx;
    -ms-flex-pack: distribute;
    justify-content: space-around;
    -ms-flex-align: center;
    align-items: center;
}
.c-header .c-header__logo {
    width: 140rpx;
    height: 60rpx;
    margin-right: 20rpx;
}
.c-header .c-header__search {
    display: -ms-flexbox;
    display: flex;
    width: 100%;
    height: 50rpx;
    border: 2rpx solid #ddd;
    border-radius: 8rpx;
    padding-left: 20rpx;
    background-color: #f7f7f7;
    -ms-flex-align: center;
    align-items: center;
}
.c-header__search icon{
    padding-right: 10rpx;
    color: #e60000;
    vertical-align: middle
}
