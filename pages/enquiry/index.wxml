<view class="o-container">
	<view  class="o-modal o-container__full-width">
		<view class="o-modal__header">
		<text type="button" class="o-modal__close js-action__go-back">
		<text class="ui-o-icon__angle--left"></text>
		</text>
		<text class="o-modal__title">免费询盘</text>
		</view>
		<view  class="o-modal__body">
			<form class="ui-o-form ui-c-enquiry js-enquiry__form" novalidate="novalidate">
				<view  class="form-group">
					<input class="form-control" name="name" type="text" placeholder="请输入您的姓名 *" />
				</view >
				<view  class="form-group">
					<view  class="intl-tel-input allow-dropdown">
						<view  class="flag-container">
							<view  class="selected-flag" tabindex="0" title="China (中国): +86">
